@page
@model QLBV.Pages.BacSi.DanhSachPhieuKhamModel
@{
    ViewData["Title"] = "Danh sách phiếu khám";
}
<form method="post" asp-page-handler="TimKiem" class="mb-4">
    <div class="input-group">
        <input name="MaPk" class="form-control" placeholder="Nhập mã phiếu..." value="" autocomplete="off" />
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-search"></i> Tìm kiếm
        </button>
    </div>
</form>
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>@ViewData["Title"]</h2>
        <div>
            <span class="badge badge-primary mr-2 text-dark">Hôm nay: @DateTime.Today.ToString("dd/MM/yyyy")</span>
            <span class="badge badge-info text-dark">Tổng: @Model.PhieuKhamBenhs.Count phiếu</span>
        </div>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center bg-primary text-white">
            <h6 class="m-0 font-weight-bold">Danh sách bệnh nhân chờ khám</h6>
           
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                    <thead class="thead-light">
                        <tr>
                            <th width="10%">Mã PK</th>
                            <th width="20%">Bệnh nhân</th>
                            <th width="30%">Triệu chứng</th>
                            <th width="15%">Thời gian</th>
                            <th width="25%">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.PhieuKhamBenhs.OrderBy(p => p.NgayKham))
                        {
                            <tr>
                                <td>@item.MaPk</td>
                                <td>
                                    <div class="font-weight-bold">@item.NguoiKhamNavigation.HoTenBn</div>
                                    <small class="text-muted">@item.NguoiKhamNavigation.Sdt</small>
                                </td>
                                <td>
                                    <div class="text-truncate" style="max-width: 250px;" title="@item.TrieuChung">
                                        @item.TrieuChung
                                    </div>
                                </td>
                                <td>
                                    @item.NgayKham
                                </td>
                                <td>
                                    <div class="d-flex">
                                        <a asp-page="./PhieuKham" asp-route-id="@item.MaPk"
                                           class="btn btn-info btn-sm mr-4" title="Xem chi tiết">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-page="./ThemToaThuoc" asp-route-maPk="@item.MaPk"
                                           class="btn btn-primary btn-sm mr-4" title="Khám bệnh">
                                            <i class="fas fa-stethoscope"></i>
                                        </a>
                                   
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Khởi tạo DataTable
            var table = $('#dataTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.21/i18n/Vietnamese.json"
                },
                "columnDefs": [
                    { "orderable": false, "targets": [4] } 
                ]
            });

          
       
    </script>
}