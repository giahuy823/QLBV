@page
@model QLBV.Pages.QuanLyTaiVu.XemThuocVaGiaThuocModel
@{
    ViewData["Title"] = "Danh sách thuốc và giá bán";
}

<h2>Danh sách thuốc</h2>
<div class="mb-3">
    <a asp-page="/QuanLyTaiVu/ThemThuoc" class="btn btn-success">
        <i class="fas fa-plus"></i> Thêm mới
    </a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Mã thuốc</th>
            <th>Tên thuốc</th>
            <th>Đơn vị</th>
            <th>Giá gần nhất</th>
            <th>Ngày áp dụng</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.DanhSachThuoc)
        {
            <tr>
                <td>@item.MaThuoc</td>
                <td>@item.TenThuoc</td>
                <td>@item.DonVi</td>
                <td>@item.GiaGanNhat?.Gia.ToString("N0") VNĐ</td>
                <td>@item.GiaGanNhat?.NgayApDung.ToString("dd/MM/yyyy")</td>
                <td>
                    <a asp-page="/QuanLyTaiVu/Thuoc" asp-route-maThuoc="@item.MaThuoc" class="btn btn-sm btn-primary me-2">
                        <i class="fas fa-edit"></i> Sửa
                    </a>
                    @* <form method="post" asp-page-handler="Delete" asp-route-maThuoc="@item.MaThuoc" style="display:inline;" *@
                    @*       onsubmit="return confirm('Bạn có chắc muốn xóa thuốc này không?');"> *@
                    @*     <button type="submit" class="btn btn-sm btn-danger"> *@
                    @*         <i class="fas fa-trash-alt"></i> Xóa *@
                    @*     </button> *@
                    @* </form> *@
                </td>
            </tr>
        }
    </tbody>
</table>
