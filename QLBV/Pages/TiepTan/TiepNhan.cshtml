@page
@model QLBV.Pages.TiepTan.TiepNhanModel
@{
    ViewData["Title"] = "Tiếp nhận bệnh nhân";
}

<h2 class="mb-4">Tiếp nhận bệnh nhân</h2>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>@Model.Message</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Đóng"></button>
    </div>
}

<form method="post" class="mb-5">
    <div class="row g-3">
        <div class="col-md-4">
            <label asp-for="BenhNhanMoi.MaBn" class="form-label">Mã bệnh nhân</label>
            <input asp-for="BenhNhanMoi.MaBn" class="form-control" readonly />
            <span asp-validation-for="BenhNhanMoi.MaBn" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="BenhNhanMoi.HoTenBn" class="form-label">Họ tên</label>
            <input asp-for="BenhNhanMoi.HoTenBn" class="form-control" />
        </div>
        <div class="col-md-4">
            <label asp-for="BenhNhanMoi.NgaySinh" class="form-label">Ngày sinh</label>
            <input asp-for="BenhNhanMoi.NgaySinh" class="form-control" type="date" />
        </div>
        <div class="col-md-6">
            <label asp-for="BenhNhanMoi.DiaChi" class="form-label">Địa chỉ</label>
            <input asp-for="BenhNhanMoi.DiaChi" class="form-control" />
        </div>
        <div class="col-md-6">
            <label asp-for="BenhNhanMoi.Sdt" class="form-label">Số điện thoại</label>
            <input asp-for="BenhNhanMoi.Sdt" class="form-control" />
        </div>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-plus-circle me-1"></i> Tiếp nhận
        </button>
    </div>
</form>

<h4>Bệnh nhân gần nhất</h4>
<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Mã BN</th>
            <th>Họ tên</th>
            <th>Ngày sinh</th>
            <th>Địa chỉ</th>
            <th>SĐT</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bn in Model.BenhNhan)
        {
            <tr>
                <td>@bn.MaBn</td>
                <td>@bn.HoTenBn</td>
                <td>@(bn.NgaySinh?.ToString("dd/MM/yyyy"))</td>
                <td>@bn.DiaChi</td>
                <td>@bn.Sdt</td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
