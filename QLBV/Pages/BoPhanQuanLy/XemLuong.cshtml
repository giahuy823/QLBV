@page
@model QLBV.Pages.BoPhanQuanLy.XemLuongModel
@{
    ViewData["Title"] = "Xem Lương";
}

<h2 class="mb-4">Danh sách lương nhân viên</h2>

<table class="table table-bordered table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Mã lương</th>
            <th>Mã nhân viên</th>
            <th>Tháng/Năm</th>
            <th>Lương cơ bản</th>
            <th>Phụ cấp</th>
            <th>Ngày công</th>
            <th>Tổng lương</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var luong in Model.DsLuong)
        {
            var isMe = luong.MaNV == User.FindFirst("MaNv")?.Value;

            <tr class="@(isMe ? "table-success fw-bold" : "")">
                <td>@luong.MaLuong</td>
                <td>@luong.MaNV</td>
                <td>@($"{luong.Thang}/{luong.Nam}")</td>
                <td>@luong.LuongCoBan</td>
                <td>@luong.PhuCap.ToString("N0")</td>
                <td>@luong.NgayCong</td>
                <td>@luong.TongLuong.ToString("N0")</td>
            </tr>
        }
    </tbody>
</table>
