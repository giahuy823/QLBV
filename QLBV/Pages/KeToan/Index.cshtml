@page
@model QLBV.Pages.KeToan.IndexModel
@{
    ViewData["Title"] = "Danh sách lương";
}

<h2>Danh sách lương</h2>

<form method="get" class="form-inline mb-4">
    <div class="form-group mr-3">
        <label for="MaNv" class="mr-2 font-weight-bold">Mã Nhân Viên:</label>
        <input type="text" name="MaNv" value="@Model.MaNv" class="form-control" placeholder="Nhập mã nhân viên..." />
    </div>
    <button type="submit" class="btn btn-success mr-2">
        <i class="fas fa-search"></i> Tìm
    </button>
    <a asp-page="./Index" class="btn btn-outline-secondary bg-light">
        <i class="fas fa-list"></i> Hiển thị tất cả
    </a>
</form>
<table class="table table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Mã Lương</th>
            <th>Mã Nhân Viên</th>
           
            <th>Tháng</th>
            <th>Năm</th>
            <th>Lương Cơ Bản</th>
            <th>Phụ Cấp</th>
            <th>Ngày Công</th>
            <th>Tổng Lương</th>
         
        </tr>
    </thead>
    <tbody>
        @if (Model.DsLuong.Any())
        {
            foreach (var item in Model.DsLuong)
            {
                <tr>
                    <td>@item.MaLuong</td>
                    <td>@item.MaNV</td>
                  
                    <td>@item.Thang</td>
                    <td>@item.Nam</td>
                    <td>@item.LuongCoBan</td>
                    <td>@item.PhuCap.ToString("N0")</td>
                    <td>@item.NgayCong</td>
                    <td>@item.TongLuong.ToString("N0")</td>
                    
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="10" class="text-center">Không có dữ liệu.</td>
            </tr>
        }
    </tbody>
</table>
