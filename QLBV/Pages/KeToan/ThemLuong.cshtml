@page
@model QLBV.Pages.KeToan.ThemLuongModel
@{
    ViewData["Title"] = "Tính lương nhân viên";
}

<h2 class="mb-4 text-primary">Tính lương nhân viên</h2>

<div asp-validation-summary="All" class="text-danger"></div>

<form method="post" class="border p-4 rounded shadow-sm bg-light">
    <div class="form-group mb-3">
        <label asp-for="Luong.MaNV" class="fw-bold">Mã nhân viên</label>
        <input asp-for="Luong.MaNV" class="form-control" placeholder="Nhập mã nhân viên" />
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="Luong.Thang" class="fw-bold">Tháng</label>
            <input asp-for="Luong.Thang" type="number" class="form-control" placeholder="VD: 5" />
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="Luong.Nam" class="fw-bold">Năm</label>
            <input asp-for="Luong.Nam" type="number" class="form-control " placeholder="VD: 2025" />
        </div>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Luong.LuongCoBan" class="fw-bold">Lương cơ bản</label>
        <input asp-for="Luong.LuongCoBan" class="form-control " placeholder="Nhập lương cơ bản" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Luong.PhuCap" class="fw-bold">Phụ cấp</label>
        <input asp-for="Luong.PhuCap" class="form-control " placeholder="Nhập phụ cấp (nếu có)" />
    </div>

    <div class="form-group mb-4">
        <label asp-for="Luong.NgayCong" class="fw-bold">Số ngày công</label>
        <input asp-for="Luong.NgayCong" class="form-control " placeholder="Nhập số ngày làm việc" />
    </div>

    <button type="submit" class="btn btn-success btn-lg w-100">
        <i class="fas fa-calculator"></i> Tính lương
    </button>
</form>
