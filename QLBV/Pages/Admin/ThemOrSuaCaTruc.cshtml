@page
@model QLBV.Pages.Admin.ThemOrSuaCaTrucModel
@{
    ViewData["Title"] = Model.IsEdit ? "Sửa ca trực" : "Thêm ca trực";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }

    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="CaTruc.MaCt" class="form-label">Mã ca trực</label>
            <input asp-for="CaTruc.MaCt" class="form-control" readonly="@Model.IsEdit" />
            <span asp-validation-for="CaTruc.MaCt" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="IsEdit" />

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="CaTruc.ThoiGianBt" class="form-label">Thời gian bắt đầu</label>
                <input asp-for="CaTruc.ThoiGianBt" type="datetime-local" class="form-control" />
                <span asp-validation-for="CaTruc.ThoiGianBt" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="CaTruc.ThoiGianKt" class="form-label">Thời gian kết thúc</label>
                <input asp-for="CaTruc.ThoiGianKt" type="datetime-local" class="form-control" />
                <span asp-validation-for="CaTruc.ThoiGianKt" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="CaTruc.Nvtruc" class="form-label">Nhân viên trực</label>
            <select asp-for="CaTruc.Nvtruc" asp-items="Model.Dsnv" class="form-select">
                <option value="">-- Chọn nhân viên --</option>
            </select>
            <span asp-validation-for="CaTruc.Nvtruc" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save me-1"></i> Lưu
            </button>
            <a asp-page="/Admin/QuanLyCaTruc" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-1"></i> Quay lại
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Validate thời gian client-side
        document.querySelector('form').addEventListener('submit', function(e) {
            const start = new Date(document.getElementById('CaTruc_ThoiGianBt').value);
            const end = new Date(document.getElementById('CaTruc_ThoiGianKt').value);

            if (start && end && start >= end) {
                alert('Thời gian kết thúc phải sau thời gian bắt đầu');
                e.preventDefault();
            }
        });
    </script>
}